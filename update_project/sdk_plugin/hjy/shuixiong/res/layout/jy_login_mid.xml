<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <CheckBox
            android:id="@+id/cb_auto_login_jy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:button="@drawable/jy_checkbox_selector"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_autologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/cb_auto_login_jy"
            android:text="自动登录"
            android:textColor="@color/jy_easygray"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_forget_pw_jy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="忘记密码?"
            android:textColor="#32C3E9"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
    
    
	
    <TextView
        android:id="@+id/tv_login_submit_jy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/jy_login_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />
	<RelativeLayout
        android:id="@+id/rl_agree_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
         >

        <CheckBox
            android:id="@+id/cb_agree_pro_jy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_marginLeft="20dp"
            android:button="@drawable/jy_checkbox_selector"
            android:textColor="#000000"
            android:checked="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_agreepro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/cb_agree_pro_jy"
            android:text="登录注册即表示同意"
            android:textColor="@color/jy_easygray"
            android:textSize="11sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_protocal_jy"
            android:layout_toEndOf="@id/tv_agreepro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#32C3E9"
            android:textSize="11sp"
            tools:ignore="RtlCompat" />
    </RelativeLayout>


</LinearLayout>